<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.OneFragment">


        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Que frutas comer hoje？"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/mao"
            android:layout_toRightOf="@+id/tv_name"
            android:layout_marginTop="65dp"
            />


    <com.qw.adse.utils.zhuanpan.LuckPans
        android:id="@+id/luckPans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <ImageView
        android:id="@+id/img_start"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/start"
        android:clickable="true"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_xx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Opções"
            android:background="@drawable/radius_xian_black_8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"

            />
        <TextView
            android:id="@+id/tv_jd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="decisão"
            android:background="@drawable/radius_xian_black_8dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:visibility="gone"
            />

    </LinearLayout>

</RelativeLayout>